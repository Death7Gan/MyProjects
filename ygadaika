#include <iostream>
#include <ctime>

using namespace std;
const char N = '\n';

int main()
{
	setlocale(LC_ALL, "Rus");
	srand(time(NULL));

	cout << "Игра началась." << N;
	cout<< "Компьютер загадал число от 1 до 100." << N;
	cout<< "Вам надо отгадать его."<<N;
	int CompNunbers;
	CompNunbers = rand() % 100 + 1;
	int YouNunbers;
	int score = 0;
	

do
{
	cout << "Введите ваше число: ";
	cin >> YouNunbers;
	int c = CompNunbers - YouNunbers;
	
	if (YouNunbers > 100 || YouNunbers < 0)
	{
		cout << "Ошибка, превышен лимит числа" << N;
		goto link;
	}
	if (c <= 100 && c>=80 && c > 0)
	{
		cout << "Мдааа,лучше бы я этого не видел, разница больше 80 " << N<<N;
	}
	if (c < 80 && c >= 50 && c > 0)
	{
		cout << "разница между числами больше 50,всё херня давай по новой   " << N << N;
	}
	if (c < 50 && c>=20 && c > 0)
	{
		cout << "Уже неплохо, разница всего лишь от 20 до 50 цифр))   " << N << N;
	}

	if (c < 20 && c >= 5 && c > 0)
	{
		cout << "Ты чертовски близко, максимальная разница до 15 цифр " << N << N;
	}

	if (c < 5 && c > 0)
	{
		cout << "Ну прикалываешься что-ли, разница в 5 и ты не можешь найти ? " << N << N;
	}
	if (c >= -100 && c <= -80 && c < 0)
	{
		cout << "Мдааа,лучше бы я этого не видел, разница больше 80 " << N << N;
	}
	if (c > -80 && c <= -50 && c < 0)
	{
		cout << "разница между числами больше 50,всё херня давай по новой " << N << N;
	}
	if (c > -50 && c <= -20 && c < 0)
	{
		cout << "Уже неплохо, разница всего лишь от 20 до 50 цифр " << N << N;
	}

	if (c > -20 && c <= -5 && c < 0)
	{
		cout << "Ты чертовски близко, максимальная разница до 15 цифр " << N << N;
	}

	if (c > -5 && c < 0)
	{
		cout << "Ну прикалываешься что-ли, разница в 5 цифр и ты не можешь найти ? " << N << N;
	}
	score++;
} while (YouNunbers != CompNunbers);

cout << "Как же ты крут, ты смог победить комп" << N;
cout << "А за сколько попыток ты там это сделал" << N; 

if (score == 1)
{
	cout << "Ты потратил " << score << " попытку" << N << "Кто ты такой воин, как ты это сделал";
}
if (score > 1 && score <= 4)
{
	cout << "Ты потратил " << score << " попытки" << N << "Теперь ты точно абсолют";
}
if (score>=5 && score<8)
{
	cout<< "Ты потратил " << score << " попыток"<<N<<"Весьма не дурно, сосунок";
}
else
{
	cout << "Ты потратил " << score << " попыток" << N << "И что это за херня, давай еще раз пытайся щенок";
}
	
link:
cout << N;
}
