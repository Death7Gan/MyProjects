#include <iostream>
#include <ctime>

using namespace std;
const char N = '\n';

int main()
{
	setlocale(LC_ALL, "Rus");
	srand(time(NULL));

	cout << "Игра началась." << N << "Компьютер загадал число от 1 до 100." << N;
	int CompNunbers;
	CompNunbers = rand() % 100 + 1;
	int YouNunbers;
	int score = 0;
	cout << "Ведите ваше число: ";

	do
	{
		cin >> YouNunbers;
		int c = CompNunbers - YouNunbers;
		
		if (YouNunbers > 100 || YouNunbers < 0)
		{
			cout << "Ошибка" << N;
			goto link;
		}
		if (c <= 100 && c>=60 && c > 0)
		{
			cout << "Ваше число слишком далеко " << N<<N;
		}
		if (c < 60 && c>=20 && c > 0)
		{
			cout << "Ваше число слишком далеко " << N << N;
		}

		if (c < 20 && c >= 10 && c > 0)
		{
			cout << "Ваше число близко " << N << N;
		}

		if (c < 10 && c > 0)
		{
			cout << "Ваше число очень близко " << N << N;
		}
		if (c >= -100 && c <= -60 && c < 0)
		{
			cout << "Ваше число слишком далеко " << N << N;
		}
		if (c > -60 && c <= -20 && c < 0)
		{
			cout << "Ваше число слишком далеко " << N << N;
		}

		if (c > -20 && c <= -10 && c < 0)
		{
			cout << "Ваше число близко " << N << N;
		}

		if (c > -10 && c < 0)
		{
			cout << "Ваше число очень близко " << N << N;
		}
		cout << "Ведите новое число: ";
		score++;
	} while (YouNunbers != CompNunbers);
	cout << "Вы выйграли!!!" << N << "Вы потратили " << score << " попыток)";
link:
	cout << N;
}
