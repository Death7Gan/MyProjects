#include <iostream>
#include <ctime>

using namespace std;
const char N = '\n';

int main()
{
  	setlocale(LC_ALL, "Rus");
    cout << "Загадай число от 0 до 100" << N;
    int min = 0,find=50, max = 100;
    
    cout << "Ваше число > или < или = " << find << "?\n";

    char y;
    cin >> y;
do
{

    if (y == '>')
    {
        min = find; 
        find =  ( min+ max) / 2; 

        cout << "Ваше число > или < или = " << find << "?\n";
        cin >> y;
       
    } 
    if (y == '<') 
    { 
        max = find; 
        find = (min + max) / 2;

        cout << "Ваше число > или < или = " << find << "?\n";
        cin >> y;

    }if (y=='=')
    {
        link:
        cout << "Ваше число = " << find << N;
    }

    if  (find == 99 && y=='>')
    {
            y = '=';
            find = 100;
            goto link;
    }
    if (find == 1 && y == '<')
    {
     y = '=';
     find = 0;
     goto link;
    }
} while (y !='=');

}
