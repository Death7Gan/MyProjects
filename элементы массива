#include <iostream>

void FillArray(int* const arr, const int size)
{
	for (int i = 0; i < size; i++)
	{
		arr[i] = rand() % 10+1;
	}

}

void ShowArray(int* const arr, const int size)
{
	for (int i = 0; i < size; i++)
	{
		cout<<arr[i]<<" ";
	}
	cout << N;
}

void push_back_end(int*& arr, int& size,const int value)
{
	int* NewArray = new int[size + 1];
	for (int i = 0; i < size; i++)
	{
		NewArray[i] = arr[i];
	}
	NewArray[size] = value;
	size++;
	delete[] arr;
	arr = NewArray;
}

void push_back_begin(int*& arr, int& size, const int value)
{
	int* NewArray = new int[size + 1];
	for (int i = 0; i < size; i++)
	{
		NewArray[i + 1] = arr[i];
	}
	NewArray[0] = value;
	size++;
	delete[] arr;
	arr = NewArray;
}

void pop_back_end(int*& arr, int& size)
{
	size--;
	int* NewArray = new int[size];
	for (int i = 0; i < size; i++)
	{
		NewArray[i] = arr[i];
	}
	delete[] arr;
	arr = NewArray;
}

void pop_back_begin(int*& arr, int& size)
{
	size--;
	int* NewArray = new int[size];
	for (int i = 0; i < size; i++)
	{
		NewArray[i] = arr[i+1];
	}
	delete[] arr;
	arr = NewArray;
}

int main()
{
	setlocale(LC_ALL, "Rus");
	cout << "Выбери размер массивa" << N;
	int size;
	cin >> size;
	int* arr=new int[size];
	cout << "Твой массив: " << N;
	FillArray(arr, size);
	ShowArray(arr, size);
	int var;
	cout << "Выбери что хочешь сделать с массивом" << N
	<<"1 - добавать один элемент"<<N
	<<"2 - убрать один элемент"<<N<<N;
	cin >> var;
	switch (var)
	{
	case 1:
		int var1;
		cout << N << "1 - добавить элемент спереди" << N
				  << "2 - добавить элемент сзади" << N << N;
		cin >> var1;
		cout << "Напиши новое число, которое хочешь добавить" << N;
		int valune;
		cin >> valune;
		switch (var1)
		{
		case 1:
			push_back_begin(arr, size, valune);
			break;
		case 2:
			push_back_end(arr, size, valune);
			break;
		default:
			cout << "EROOOOOOR" << N;
			break;
		}
		break;
	case 2:
		int var2;
		cout <<N<< "1 - Убрать элемент спереди" << N
				<< "2 - убрать элемент сзади" << N<<N;
		cin >> var2;
			switch (var2)
			{
			case 1:
				pop_back_begin(arr, size);
				break;
			case 2:
				pop_back_end(arr, size);
				break;
			default:
				cout << "EROOOOOOR" << N;
				break;
			}
		break;
	default:
		cout << "EROOOOOOR" << N;
		break;
	}
	cout << "Новый массив:" << N;
	ShowArray(arr, size);
	delete[] arr;	
}
